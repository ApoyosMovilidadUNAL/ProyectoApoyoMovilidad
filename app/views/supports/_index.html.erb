<p id="notice"><%= notice %></p>

<h1>Soportes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ruta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request.support.each do |support| %>
      <tr>
        <td><%= support.name %></td>
        <td><%= support.route %></td>
        <td><%= link_to 'Show', student_support_path(support.id) %></td>
        <td><%= link_to 'Destroy', student_support_path(:id => support.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Support', new_student_support_path(:request => @request.id) %>

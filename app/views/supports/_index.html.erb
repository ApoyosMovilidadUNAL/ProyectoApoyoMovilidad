<p id="notice"><%= notice %></p>

<h1>Soportes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ruta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request.support.each do |support| %>
      <tr>
        <td><%= support.sup_name %></td>
        <td><%= support.sup_ruta %></td>
        <%case @student.stu_rol
        when 1%>
          <td><%= link_to 'Show', admin_support_path %></td>
          <td><%= link_to 'Edit', edit_admin_support_path(support) %></td>
          </td>
        <%when 2%>
          <td><%= link_to 'Show', student_support_path %></td>
          <td><%= link_to 'Edit', edit_student_support_path(support) %></td>
          </td>
        <%end%>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


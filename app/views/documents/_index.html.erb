<p id="notice"><%= notice %></p>

<h1>Documentos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ruta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request.document.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.route %></td>
        <td><%= link_to 'Ver', student_document_path(document.id) %></td>
        <td><%= link_to 'Eliminar', student_document_path(:id => document.id), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_student_document_path(:request => @request.id) %>

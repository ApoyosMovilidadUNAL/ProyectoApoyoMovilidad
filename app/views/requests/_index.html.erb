<p id="notice"><%= notice %></p>
<div class="container-fluid">
    
  <h1>Solicitudes</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Estado</th>
        <th>Estudiante</th>
        <th>Profesor</th>
        <th>Descripcion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @requests.each do |request| %>
        <tr class="<%= (request.req_estado == 1) ? 'danger' : ((request.req_estado == 2) ? 'info': 'success' ) %>" >
          <td>
            <% if request.req_estado == 1 %>
              <span><strong>Pendiente</strong></span>
            <% elsif request.req_estado == 2 %>
              <span><strong>En revisi√≥n</strong></span>
            <% elsif request.req_estado == 3 %>
              <span><strong>En Espera de soportes</strong></span>
            <% end %>
          </td>
          <td><%= request.student.stu_name %></td>
          <td><%= request.professor.pro_name %></td>
          <td><%= request.req_descripcion %></td>

          <td><%= link_to 'Show', request %></td>
          <td><%= link_to 'Edit', edit_request_path(request) %></td>
          <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Request', new_request_path %>
  <% if @student.stu_rol == 1 %>
  <%= will_paginate @requests, renderer: BootstrapPagination::Rails %>
  <% end %>
</div>